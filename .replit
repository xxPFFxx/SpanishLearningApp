entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["sh", "-c", "node app.js"]
deploymentTarget = "cloudrun"
ignorePorts = false

[workflows]
runButton = "Run server"

[[workflows.workflow]]
name = "Run server"
author = 9435788

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app.js"

[[ports]]
localPort = 3000
externalPort = 80
